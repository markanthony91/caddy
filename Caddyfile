{
    debug
}

http://fedora.taild42ed2.ts.net, http://localhost {

    # n8n Automations (Restaurado para Reverse Proxy - Funcional)
    handle_path /n8n* {
        reverse_proxy localhost:15678 {
            flush_interval -1
        }
    }

    # Qdrant
    @qdrant_root path /qdrant /qdrant/
    redir @qdrant_root /qdrant/dashboard 307
    handle_path /qdrant* {
        reverse_proxy localhost:16333
    }
    handle /dashboard* {
        reverse_proxy localhost:16333
    }

    # NocoDB
    @nocodb_root path /nocodb /nocodb/
    redir @nocodb_root /nocodb/dashboard/ 307
    handle_path /nocodb* {
        reverse_proxy localhost:18080
    }

    # Gerenciador Financeiro
    handle_path /financeiro* {
        reverse_proxy localhost:15500
    }

    # Dashboard Central (Homarr)
    handle_path /start* {
        reverse_proxy localhost:17500
    }

    # Atalhos para Apps que n√£o suportam subpaths (Redirecionamento de Porta)
    redir /monitor /monitor/
    handle /monitor/ {
        redir http://{host}:8090
    }

    redir /backup /backup/
    handle /backup/ {
        redir http://{host}:51515
    }

    # Supabase Kong
    handle_path /supabase* {
        reverse_proxy localhost:54321
    }

    # SilverBullet (Fallback Final)
    handle {
        reverse_proxy localhost:15050
    }
}
